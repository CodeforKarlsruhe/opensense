<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sensor_list_item_selector"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/configuration_list_adapter_cloud"
        android:tint="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sensor_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Temperatur" />

        <TextView
            android:id="@+id/sensor_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24.90 Â°C"/>
    </LinearLayout>
</LinearLayout>