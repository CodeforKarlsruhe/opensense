<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWidgetBackground"
    android:padding="@dimen/widget_margin"
    tools:width="40dp">

    <ImageView
        android:id="@+id/one_value_widget_configuration_button"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/one_value_configuration_image_description"
        android:src="@drawable/widget_configuration" />

    <TextView
        android:id="@+id/one_value_widget_box_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_button_size"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_marginStart="@dimen/widget_margin"
        android:layout_toEndOf="@id/one_value_widget_configuration_button"
        android:layout_toStartOf="@id/one_value_widget_refresh_button"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorWidgetText"
        android:textSize="@dimen/widget_text_size_small"
        tools:text="OK Lab Karlsruhe 1" />

    <ProgressBar
        android:id="@+id/one_value_widget_progress_bar"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/one_value_widget_refresh_button"
        android:layout_width="@dimen/widget_button_size"
        android:layout_height="@dimen/widget_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/one_value_refresh_image_description"
        android:src="@drawable/widget_refresh" />

    <TextView
        android:id="@+id/one_value_widget_sensor_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorWidgetText"
        android:textSize="@dimen/widget_text_size_normal"
        android:textStyle="bold"
        tools:text="1234.56 μW/cm²" />

    <TextView
        android:id="@+id/one_value_widget_sensor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorWidgetText"
        android:textSize="@dimen/widget_text_size_small"
        tools:text="UV-Intensität" />
</RelativeLayout>